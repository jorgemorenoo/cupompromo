{
    "name": "cupompromo/cupompromo",
    "description": "Plugin WordPress para portal de cupons de desconto",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Cupompromo Team",
            "email": "dev@cupompromo.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Cupompromo\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cupompromo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit-simple.xml",
        "test:wordpress": "phpunit -c phpunit.xml",
        "test:coverage": "phpunit -c phpunit-simple.xml --coverage-html coverage",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress",
        "lint": "php -l",
        "check": [
            "@lint",
            "@phpcs",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 