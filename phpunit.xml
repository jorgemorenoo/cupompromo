<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
         backupGlobals="false">
    
    <testsuites>
        <testsuite name="Cupompromo Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    
    <coverage>
        <include>
            <directory suffix=".php">includes</directory>
        </include>
        <exclude>
            <directory>vendor</directory>
            <directory>tests</directory>
            <directory>build</directory>
            <directory>node_modules</directory>
        </exclude>
    </coverage>
    
    <php>
        <env name="WP_TESTS_DIR" value="/tmp/wordpress-tests-lib"/>
        <env name="WP_CORE_DIR" value="/tmp/wordpress/"/>
        <env name="CUPOMPROMO_PLUGIN_PATH" value="."/>
        <env name="CUPOMPROMO_VERSION" value="1.0.0"/>
    </php>
    
    <listeners>
        <listener class="Yoast\PHPUnitPolyfills\Polyfills\TestListenerDefault" />
    </listeners>
    
    <logging>
        <junit outputFile="tests/reports/junit.xml"/>
        <coverage>
            <html outputDirectory="tests/reports/coverage"/>
            <text outputFile="tests/reports/coverage.txt"/>
        </coverage>
    </logging>
</phpunit> 